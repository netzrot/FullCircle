<!DOCTYPE html>
<html>
<% include ./partials/head %>
<body>
  <!-- FACEBOOK SHARE BUTTON DEPENDENCY -->
  <div id="fb-root"></div>
  <div class="container">
  <% include ./partials/banner %>
    <% include ./partials/social_media %><br /><br />
    <div class="row"> 
      <div class="col-sm-12">
        <center>
          <form action="/search" method="POST" class="form-inline">
            <div class="form-group">
              <label for="search">Search for topic:</label>
              <input type="text" class="form-control" name="search">
            </div>
            <button type="submit" id="submit" class="btn btn-default">Submit</button>
          </form>
        </center>
      </div>
    </div><br /><br /><br />
    <div class="row">
      <div class="col-sm-4" class="source">
        <center><h2 class="lead">top news from the L E F T</h2></center></br>
        <% if (stories.left.length > 0) { %>
          <% let leftLimit %>
          <% if (stories.left.length < maxStories) { %>
            <% leftLimit = stories.left.length %>
          <% } else { %>
            <% leftLimit = maxStories %>
          <% } %>
          <% for (let i = 0; i < leftLimit; i++) { %>
            <div class="stories">
              <h4><%= stories.left[i].title %></h4>
              <p id="description"><%= stories.left[i].description %></p>
              <p><%= stories.left[i].publishedAt %></p>
              <a target="_blank" href=<%= stories.left[i].url %>>Read full story</a></br></br>
            </div>
          <% } %>
        <% } else { %>
          <% include ./partials/story_loading_error %>
        <% } %>
      </div>
      <div class="col-sm-4" class="source">
        <center><h2 class="lead">top news from the C E N T E R</h2></center><br />
        <% if (stories.center.length > 0) { %>
          <% let centerLimit %>
          <% if (stories.center.length < maxStories) { %>
            <% centerLimit = stories.center.length %>
          <% } else { %>
            <% centerLimit = maxStories %>
          <% } %>
          <% for (i = 0; i < centerLimit; i++) { %>
            <div class="stories">
              <h4><%= stories.center[i].title %></h4>
              <p id="description"><%= stories.center[i].description %></p>
              <p><%= stories.center[i].publishedAt %></p>
              <a target="_blank" href=<%= stories.center[i].url %>>Read full story</a></br></br>
            </div>
          <% } %>
        <% } else { %>
          <% include ./partials/story_loading_error %>
        <% } %>
      </div>
      <div class="col-sm-4" class="source">
        <center><h2 class="lead">top news from the R I G H T</h2></center><br />
        <% if (stories.right.length > 0) { %>
          <% let rightLimit %>
          <% if (stories.right.length < maxStories) { %>
            <% rightLimit = stories.right.length %>
          <% } else { %>
            <% rightLimit = maxStories %>
          <% } %>
          <% for (i = 0; i < rightLimit; i++) { %>
            <div class="stories">
              <h4><%= stories.right[i].title %></h4>
              <p id="description"><%= stories.right[i].description %></p>
              <p><%= stories.right[i].pubDate %></p>
              <a target="_blank" href=<%= stories.right[i].url %>>Read full story</a></br></br>
            </div>
          <% } %>
        <% } else { %>
          <% include ./partials/story_loading_error %>
        <% } %>
      </div><br /><br /><br /><br />
      <div class="row">
        <div class="col-sm-12" id="ap">
          <p>with support from <a target="_blank" href="https://newsapi.org">newsapi</a> and <a target="_blank" href="https://rss2json.com/">rsstojson</a>. 
          <a target="_blank" href="/about">About this project</a></p>
        </div>
      </div>
    </div>
  </div>
</body>
</html>